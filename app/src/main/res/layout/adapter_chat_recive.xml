<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="7dp"
            android:src="@drawable/ic_launcher"
            app:border_color="#EEEEEE"
            app:border_width="4dp"
            app:shadow="true" />

        <TextView
            android:id="@+id/text_message"

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:inputType="textMultiLine"
            android:background="@drawable/chat_shape_recive"
            android:layout_margin="3dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." />

        <TextView
            android:id="@+id/when_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:text="03:03" />
    </LinearLayout>



    <ImageView
        android:visibility="gone"
        android:id="@+id/upload_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
     />


    <ImageView
        android:visibility="gone"
        android:id="@+id/upload_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_upload_foto"
        />


    <ImageView
        android:visibility="gone"
        android:id="@+id/upload_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_upload_foto"
         />


    <ImageView
        android:visibility="gone"
        android:id="@+id/upload_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_upload_foto"
         />


    <ImageView
        android:visibility="gone"
        android:id="@+id/upload_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_upload_foto"
         />

    <LinearLayout
        android:id="@+id/event_linear"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/event_icon_chat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher"
            />

        <LinearLayout
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/time_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start "
                />


        </LinearLayout>



        <com.pkmmte.view.CircularImageView
            android:id="@+id/icon_user"
            android:layout_weight="4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_upload_foto"
            android:src="@drawable/ic_launcher"
            app:border_color="#EEEEEE"
            app:border_width="4dp"
            app:shadow="true" />

    </LinearLayout>


</LinearLayout>