<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/when_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="1dp"

            android:gravity="center"
            android:text="03:03" />

        <TextView
            android:id="@+id/text_message"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:background="@drawable/chat_shape_send"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." />


        <com.pkmmte.view.CircularImageView
            android:id="@+id/user_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_upload_foto"
            android:src="@drawable/ic_launcher"
            android:visibility="gone"
            app:border_color="#EEEEEE"
            app:border_width="4dp"
            app:shadow="true" />

    </LinearLayout>


    <ImageView
        android:id="@+id/upload_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_upload_foto"

        android:visibility="gone" />


    <ImageView
        android:id="@+id/upload_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_upload_foto"
        android:src="@drawable/small" />


    <ImageView
        android:id="@+id/upload_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_upload_foto"
        android:src="@drawable/small"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/upload_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_upload_foto"
        android:src="@drawable/small"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/upload_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_upload_foto" />

    <LinearLayout
        android:id="@+id/event_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/event_icon_chat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title" />

            <TextView
                android:id="@+id/time_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Start " />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/place_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.pkmmte.view.CircularImageView
                android:id="@+id/place_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/margin_upload_foto"
                android:src="@drawable/ic_cinema"
                android:visibility="gone"
                app:border_color="#EEEEEE"
                app:border_width="4dp"
                app:shadow="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/title_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title" />

                    <TextView
                        android:id="@+id/type_place"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title" />


                </LinearLayout>

                <TextView
                    android:id="@+id/address_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Address " />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:src="@drawable/ic_launcher" />

    </LinearLayout>


</LinearLayout>