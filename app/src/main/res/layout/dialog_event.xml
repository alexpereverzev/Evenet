<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_selector"
    android:orientation="vertical">

    <Button
        android:id="@+id/create_meetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Meetup"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/send_to_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send To Friend"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/attach_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attach to Chat Message"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/blue" />


</LinearLayout>