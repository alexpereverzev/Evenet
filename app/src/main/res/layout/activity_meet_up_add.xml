<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.event.event_me.activity.MeetUpAddActivity">

    <EditText
        android:layout_margin="2dp"
        android:id="@+id/name_meetup"
        android:singleLine="true"
        android:hint="Input name meet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:layout_margin="2dp"
            android:id="@+id/da_meetup"
            android:hint="Data"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="2dp"
            android:id="@+id/time_meetup"
            android:hint="Time"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>



    <TextView
        android:layout_margin="2dp"
        android:id="@+id/event_meetup"
        android:hint="Event"
        android:padding="5dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <AutoCompleteTextView
        android:id="@+id/place_meetup"
        android:hint="Place"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/show_map"
        android:text="Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="2dp"
        android:id="@+id/invite_friends"
        android:hint="Invite Friends"
        android:padding="5dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:layout_gravity="bottom"
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:text="Create"
        android:layout_height="wrap_content" />


</LinearLayout>




