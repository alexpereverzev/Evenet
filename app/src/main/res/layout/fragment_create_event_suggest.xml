<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/red"
    android:layout_height="match_parent" tools:context="social.evenet.fragment.CreateEventSuggest">

    <LinearLayout
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/suggest_name"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="20sp"
                android:singleLine="true"
                android:layout_marginTop="15dp"
                android:textColor="#FFFFFF"
                android:imeOptions="actionNext"
                android:backgroundTint="@color/white"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="Set a new place name"

                />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/animation"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/title_place"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <social.evenet.pager.JazzyViewPager
                android:id="@+id/jazzy_pager"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
