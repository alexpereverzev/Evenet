<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/dialog_selector">
    <TextView
        android:id="@+id/title_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Error"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/blue"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <TextView
        android:id="@+id/disc_error"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_error"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:textSize="14dp"
        android:textColor="@color/blue"
        android:text="A Unified Grocers representative will be contacting you soon"
        />

    <Button
        android:id="@+id/btncancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="OK"
        android:layout_below="@+id/disc_error"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>